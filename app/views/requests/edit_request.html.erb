<% provide(:title, "リクエスト送信") %>
<% provide(:button_text, "リクエスト送信") %>
    <h1><%= @user.name %>の<%= @request.request_name %>をリクエスト送信</h1>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <%= form_with(model: @request, url: user_request_send_request_path(@user, @request), local: true, method: :patch) do |f| %>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th><%= Request.human_attribute_name :request_name %></th>
                  <th><%= Request.human_attribute_name :request_description %></th>
                  <th><%#= Request.human_attribute_name :request_status %></th>
                  <th><%= Request.human_attribute_name :request_deadline %></th>
									<th><%= Request.human_attribute_name :partner_number %></th>
                </tr>
              </thead>
      
              <tbody>
								<tr>
                  <td><%= @request.request_name %></td>
                  <td><%= @request.request_description %></td>
                  <td><%#= @request.request_status %></td>
                  <td><%= l(@request.request_deadline, format: :short) %> </td>
                  <td>
                    <%= f.collection_select(:partner_number, @partners, :id, :name, { include_blank: "選択して下さい。" }) %> 
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="center">
              <%= f.submit yield(:button_text), class:"btn btn-lg btn-block btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>