<% provide(:title, @user.name) %>
<h1><%= @user.name %>のリクエスト一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成", new_user_request_path(@user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-requests">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :request_name %></th>
          <th><%= Task.human_attribute_name :request_description %></th>
          <th><%= Task.human_attribute_name :created_at %></th>
          <th><%= Task.human_attribute_name :request_status %></th>
          <th><%= Task.human_attribute_name :request_deadline %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each do |request| %>
        <% if request.request_status == "実施済み" %>
				<tr class="bg-success">
          <td><%= request.request_name %><%#= link_to request.name,user_task_path(@user, task), id: "task-name" %></td> 
          <td><%= request.request_description %></td>
          <td><%= l(request.created_at, format: :long) %></td>
          <td><%= request.request_status %></td>
          <td><%= l(request.request_deadline, format: :middle) %></td>
          <td>
          	<%#= link_to "リクエスト申請", user_request_edit_request_path(@user, request), class: "btn btn-primary" if current_user == @user %>
        	</td>
          <td>
            <%#= link_to "編集", edit_user_task_path(@user, task), class: "btn btn-success" %>
            <%#= link_to "削除", user_task_path(@user, task), method: :delete, data: {confirm: "「#{task.name}」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
          </td>
        </tr>
				<% else %>
				<tr>
          <td><%= request.request_name %><%#= link_to request.name,user_task_path(@user, task), id: "task-name" %></td> 
          <td><%= request.request_description %></td>
          <td><%= l(request.created_at, format: :long) %></td>
          <td><%= request.request_status %></td>
          <td><%= l(request.request_deadline, format: :middle) %></td>
          <td>
					<% if request.partner_number.nil? %>
          	<%= link_to "リクエスト申請", user_request_edit_request_path(@user, request), class: "btn btn-primary" if current_user == @user %>
					<% else %>
						リクエスト申請中
					<% end %>
        	</td>
          <td>
            <%#= link_to "編集", edit_user_task_path(@user, task), class: "btn btn-success" %>
            <%#= link_to "削除", user_task_path(@user, task), method: :delete, data: {confirm: "「#{task.name}」を削除します。よろしいですか？"}, class: "btn btn-danger" %>
          </td>
        </tr>
				<% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>